<UserControl x:Class="Cofrinho.View.userControls.barraLateral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cofrinho.View.userControls" 
             xmlns:viewmodel="clr-namespace:Cofrinho.ViewModel"             
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200">

    <UserControl.DataContext>
        <viewmodel:barraLateralViewModel/>
    </UserControl.DataContext>

    <Grid Background="#424141">
        <Grid>
            <!-- Lista de registros -->
            <ListView ItemsSource="{Binding Registros}" 
                      Visibility="{Binding MostrarLista, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding NomeRegistro}" Foreground="White" FontSize="14" Width="150"/>
                            <TextBlock Text="{Binding NomeProprietario}" Foreground="White" FontSize="14" Width="200"/>
                            <TextBlock Text="{Binding Descricao}" Foreground="White" FontSize="14" Width="300"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- Mensagem caso não tenha registros -->
            <TextBlock Text="&lt;Nenhum extrato encontrado&gt;" 
                       Foreground="#ddac00"
                       FontSize="12"
                       Visibility="{Binding MostrarMensagem, Converter={StaticResource BooleanToVisibilityConverter}}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
    
